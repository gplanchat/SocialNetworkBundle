{% extends 'KibokoSocialNetworkBundle::adminBase.html.twig' %}
{% block content %}
		<form action="{{ path('kiboko_social_network_admin_users_contact', {userId: user.id}) }}" method="post" class="form-horizontal">
			<fieldset>
				<legend>{% trans from 'admin_user' %}kiboko_social.socialnetwork.contact.title{% endtrans %}</legend>
{% if form.getChild('subject').get('errors') or form.getChild('message').get('errors') %}
			<div class="alert alert-error">
{%   for error in form.getChild('subject').get('errors') %}{{ error.messageTemplate|trans({}, 'admin_user') }}<br />{% endfor %}
{%   for error in form.getChild('message').get('errors') %}{{ error.messageTemplate|trans({}, 'admin_user') }}<br />{% endfor %}
			</div>
{% endif %}
				<div class="control-group">
					<label class="control-label" for="{{ form.getChild('subject').get('id') }}">{% trans from 'admin_user' %}kiboko_social.socialnetwork.contact.subject.label{% endtrans %}</label>
					<div class="controls">
						<input class="input-xlarge" id="{{ form.getChild('subject').get('id') }}" name="{{ form.getChild('subject').get('full_name') }}" value="{{ form.getChild('subject').get('value') }}" />
					</div>
				</div>
				<div class="control-group">
					<label class="control-label" for="{{ form.getChild('message').get('id') }}">{% trans from 'admin_user' %}kiboko_social.socialnetwork.contact.message.label{% endtrans %}</label>
					<div class="controls">
						<textarea class="input-xlarge" id="{{ form.getChild('message').get('id') }}" name="{{ form.getChild('message').get('full_name') }}">{{ form.getChild('message').get('value') }}</textarea>
					</div>
				</div>
				<div class="form-actions">
					<input type="hidden" name="{{ form.getChild('_token').get('full_name') }}" value="{{ form.getChild('_token').get('value') }}" />
					<button type="submit" class="btn btn-primary">{% trans from 'admin_user' %}kiboko_social.socialnetwork.contact.sent{% endtrans %}</button>
					<a href="{{ path('kiboko_social_network_admin_users') }}" class="btn">{% trans from 'admin' %}kiboko_social.socialnetwork.back{% endtrans %}</a>
				</div>
			</fieldset>
		</form>
{% endblock %}
